<% include partials/header %>
<div class="ui main text container segment">
    <div class="ui huge header">Add a new Blog</div>
    
    <form class="ui form" action="/blogs" method="POST">
        <div class="field">
            <label>title</label>
            <input type="text" placeholder="title" name="blog[title]">
        </div>
        <div class="field">
            <label>image url</label>
            <input type="text" placeholder="enter the blog picture url" name="blog[img]">
        </div>
        <div class="field">
            <label>blog content</label>
            <textarea rows="6" cols="47" placeholder="your blog goes here " required name="blog[body]"></textarea>
        </div>
        <input class="ui black big basic button" type="submit" >
    </form>
</div>

