<% include partials/header %>
<div class="ui main text container segment">
    <div class="ui huge header">Edit:<%=blog.title%></div>
    
    <form class="ui form" action="/blogs/<%=blog._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>title</label>
            <input type="text" value="<%=blog.title%>" name="blog[title]">
        </div>
        <div class="field">
            <label>image url</label>
            <input type="text" value="<%=blog.img%>" name="blog[img]">
        </div>
        <div class="field">
            <label>blog content</label>
            <textarea rows="6" cols="47" required name="blog[body]"><%=blog.body%></textarea>
        </div>
        <input class="ui black big basic button" type="submit" >
    </form>
</div>

<% include partials/footer.ejs %>